class 'Main' (specialized 'DemoConsole'):

w1	= ('A1');

w2	= ('A1',
		n= 500);

[

goal:-
	writeln("Hello from the Main class."),
	w1 ? p("Message to the W1 world."),
	w2 ? p("Message to the W2 world.").

]

-----------------------------------------------------

class 'A1' (specialized 'DemoConsole'):

n	= 100;

[

goal:-
	writeln(n).

p(Text):-
	writeln(Text).

]

-----------------------------------------------------
