DOMAINS:

reference:

N	= INTEGER.

class 'Main' (specialized 'DemoConsole'):

-- constant:
variable:

a	: N;

[
PREDICATES:

imperative:

p;

CLAUSES:

goal:-
	a == 100,
	p.

p:-
	writeln(a).

]
