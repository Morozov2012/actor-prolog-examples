-----------------------------------------------------------------------
--
DOMAINS:
--
ground:
--
D1	= INTEGER.
D3	= STRING.
--
D4	= SYMBOL.
D6	= INTEGER.
--
D7	= REAL.
D9	= SYMBOL.
--
reference:
--
D2	= REAL.
D5	= REAL.
D8	= REAL.
--
mixed:
--
DRL	= DR*.
--
reference:
--
DR	= STRING.
--
PREDICATES:
--
imperative:
--
test1;
--
-----------------------------------------------------------------------
class 'Main' (specialized 'Console'):
--
bagof	= ('MyBag',
		world=self);
--
[
PREDICATES:
--
imperative:
--
f(D1,D2,D3) = DR		- (i,o,i);
f(D4,D5,D6) = DR		- (i,o,i);
f(D7,D8,D9) = DR		- (i,o,i);
--
CLAUSES:
--
goal:-!,
	test1.
--
test1:-
	writeln("Main:: I will call f/3."),
	R1== bagof ? f(1.0,B3,'symbol'),!,
	writeln("Result list: ",R1),
	writeln("Success, B3= ",B3).
test1:-
	writeln("Failure").
--
f(A,1.0,C) = _:-!,
	writeln("Main:: [1]f: A=",A,", C=",C).
f(A,3.14,C) = "Result2":-!,
	writeln("Main:: [2]f: A=",A,", C=",C).
f(A,5.0,C) = "Result3":-
	writeln("Main:: [3]f: A=",A,", C=",C).
]
-----------------------------------------------------------------------
class 'MyBag' (specialized 'FindAll'):
--
mode	= 'bag';
--
[
PREDICATES:
imperative:
f(D1,D2,D3) = DRL		- (i,o,i);
f(D4,D5,D6) = DRL		- (i,o,i);
f(D7,D8,D9) = DRL		- (i,o,i);
]
