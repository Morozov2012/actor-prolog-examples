mesh(80,25)
dialog_font('helvetica',28)

dialog 'ControlPanel'("Webcam Discovery Control",default,default,default,centered,centered,default)
vbox(center)
	checkbox(1001,"Watch webcam connection/disconnection",'yes')
	custom(report,35,12,"ReportControl")
	hbox(center)
		button("clear","&Clear")
		button("exit","&O.K.")
	end_of_hbox
end_of_vbox
end_of_dialog
