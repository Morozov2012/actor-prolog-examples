import .. from "morozov/Webcam";
import .. from "morozov/Java2D";

PREDICATES:

imperative:

test1;
test2;

class 'Main' (specialized 'Console'):
--
internal:
--
	webcam	= ('Webcam');
--
[
goal:-!,
	webcam ? open,
	test1,
	test2,
	webcam ? close.
--
test1:-
	set_color('RoyalBlue'),
	writeln("Test 1"),
	webcam ? get_FPS(),
	writeln("O.K.").
--
test2:-
	set_color('RoyalBlue'),
	writeln("Test 2"),
	set_color('default'),
	FrameRate== webcam?get_FPS(),
	write("\tFrame rate (Frames Per Second): "),
	set_color('DkGreen'),
	writeln(FrameRate),
	set_color('RoyalBlue'),
	writeln("O.K.").
]
