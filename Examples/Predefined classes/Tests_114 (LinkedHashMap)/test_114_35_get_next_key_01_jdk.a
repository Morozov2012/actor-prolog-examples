--
DOMAINS:
--
N	= SYMBOL.
R	= REAL.
S	= STRING.
--
PREDICATES:
--
imperative:
--
test1;
test2;
test3;
test4;
test5;
--
-----------------------------------------------------------------------
class 'MyHashMap' (specialized 'LinkedHashMap'):
[
DOMAINS:
--
TargetValue	= f(N,R,S).
]
-----------------------------------------------------------------------
class 'Main' (specialized 'Console'):
--
internal:
--
store	= ('MyHashMap');
--
[
goal:-!,
	test1,
	test2,
	test3,
	test4,
	test5.
--
test1:-
	set_color('RoyalBlue'),
	writeln("I will store one data item."),
	set_color('default'),
	store ? append(map(10000,f('s10',3.14,"Text10"))).
--
test2:-
	set_color('RoyalBlue'),
	writeln("I will retrieve a next key:"),
	set_color('default'),
	K1== store?get_next_key(10000),!,
	writeln("The next key: ",K1),
	set_color('Red'),
	writeln("Done."),
	set_color('default').
test2:-
	set_color('DkGreen'),
	writeln("Failure!"),
	set_color('default').
--
test3:-
	set_color('RoyalBlue'),
	writeln("I will retrieve a next key:"),
	set_color('default'),
	store?get_next_key(10000),!,
	set_color('Red'),
	writeln("Done."),
	set_color('default').
test3:-
	set_color('DkGreen'),
	writeln("Failure!"),
	set_color('default').
--
test4:-
	set_color('RoyalBlue'),
	writeln("I will store data items."),
	set_color('default'),
	store ? append(map(10000,f('s10',3.14,"Text10"))),
	store ? append(map(20000,f('s20',3.14,"Text20"))),
	store ? append(map(30000,f('s30',3.14,"Text30"))),
	K1== store?get_next_key(10000),
	store ? insert_after(f('s21',3.14,"Text21"),K1,K2),
	writeln("Key one: ",K2),
	K3== store?get_next_key(K2),!,
	store ? insert_after(f('s31',3.14,"Text31"),K3,K4),
	writeln("Key two: ",K4),
	set_color('DkGreen'),
	writeln("Done."),
	set_color('default').
test4:-
	set_color('Red'),
	writeln("Failure!"),
	set_color('default').
--
test5:-
	set_color('RoyalBlue'),
	writeln("I will retrieve data items:"),
	set_color('Blue'),
	store ? find(Item),
		writeln(Item),
		fail.
test5:-
	set_color('DkGreen'),
	writeln("Done."),
	set_color('default').
]
-----------------------------------------------------------------------
