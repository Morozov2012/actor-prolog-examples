class 'Main' (specialized 'Timer'):
--
internal:
--
	dialog	= ('DemoPanel',
			x= 'centered',
			y= 'centered');
--
[
goal:-!,
	dialog ? show,
	set_period(0.5,0.0),
	activate.
--
tick:-!,
	R1== 0.5 + ?random(128)/254,
	G1== 0.5 + ?random(128)/254,
	B1== 0.5 + ?random(128)/254,
	dialog ? set_space_color(color3(R1,G1,B1)).
]
-----------------------------------------------------------------------
class 'DemoPanel' (specialized 'Dialog'):
[
]
