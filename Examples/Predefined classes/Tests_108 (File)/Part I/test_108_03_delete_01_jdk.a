PREDICATES:

imperative:

test1(Color,Color)	- (i,i);
test2(Color,Color)	- (i,i);
test3(Color,Color)	- (i,i);
test4;

class 'Main':
--
constant:
--
	testbed1	= (('Test',
				name= "test.asc",
				time_delay= 1));
	testbed2	= (('Test',
				name= 'stdin',
				time_delay= 2));
	testbed3	= (('Test',
				name= 'stdout',
				time_delay= 3));
	testbed4	= (('Test',
				name= 'stderr',
				time_delay= 4));
--
	con		= ('Console');
--
[
goal:-!.
--
alarm(_):-
	fail.
]

class 'Test' (specialized 'Timer'):
--
constant:
--
	name		: FileName;
	time_delay	: INTEGER;
--
internal:
--
	file	= ('File',
			name);
--
	con	= ('Console');
--
[
goal:-!,
	delay(time_delay).
--
tick:-!,
	con ? set_color('Blue'),
	con ? writeln("=== File: ",name," ==="),
	test4,
	test2('DkGreen','Red'),
	test1('Red','DkGreen'),
	test4,
	test3('DkGreen','Red'),
	test1('Red','DkGreen'),
	test2('DkGreen','Red'),
	test3('DkGreen','Red'),
	test1('Red','DkGreen').
--
test1(Color,_):-
	con ? set_color('Blue'),
	con ? writeln("Test 1"),
	con ? writeln("\tDoes the file exist?"),
	file ? does_exist(),!,
	con ? set_color(Color),
	con ? writeln("\tYes, it does."),
	con ? set_color('default').
test1(_,Color):-
	con ? set_color(Color),
	con ? writeln("\tNo, it doesn't."),
	con ? set_color('default').
--
test2(Color,_):-
	con ? set_color('Blue'),
	con ? writeln("Test 2"),
	con ? writeln("\tI will try to delete the file."),
	file ? delete(),!,
	con ? set_color(Color),
	con ? writeln("\tThe file was deleted successfully."),
	con ? set_color('default').
test2(_,Color):-
	con ? set_color(Color),
	con ? writeln("\tI cannot delete it."),
	con ? set_color('default').
--
test3(Color,_):-
	con ? set_color('Blue'),
	con ? writeln("Test 3"),
	con ? writeln("\tI will try to delete the file."),
	file ? delete(name),!,
	con ? set_color(Color),
	con ? writeln("\tThe file was deleted successfully."),
	con ? set_color('default').
test3(_,Color):-
	con ? set_color(Color),
	con ? writeln("\tI cannot delete it."),
	con ? set_color('default').
--
test4:-
	con ? set_color('Blue'),
	con ? writeln("Test 4"),
	con ? writeln("\tI will try to create the file."),
	file ? clear(),
	con ? set_color('DkGreen'),
	con ? writeln("\tDone."),
	con ? set_color('default').
--
alarm(Exception):-!,
	con ? set_color('Red'),
	con ? writeln("Error: ",Exception),
	con ? set_color('default').
]
