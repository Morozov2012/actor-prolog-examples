PREDICATES:

imperative:

test1;
test2;
test3;
test4;
test5;
test6;
test7;
test8;
test9;

class 'Main':
--
internal:
--
	test1	= ('Test',
			name= "demoPath1/subDir1\\htest",
			extension= ".asc");
--
	con	= ('Console');
--
[
goal:-!.
--
alarm(_):-
	fail.
]

class 'Test' (specialized 'File'):
--
constant:
--
	name	: FileName;
--
internal:
--
	con	= ('Console');
--
[
goal:-
	con ? writeln("=== File: ",name," ==="),
	fail.
goal:-
	test5,
	test1,
	test2,
	test3,
	fail.
goal:-
	test4,
	test1,
	test2,
	test3,
	fail.
goal:-
	test5,
	test1,
	test2,
	test3,
	fail.
goal:-
	test6,
	test2,
	test8,
	test2,
	fail.
goal:-
	test7,
	test3,
	test9,
	test3,
	fail.
goal:-!.
--
test1:-
	con ? writeln("Test 1"),
	con ? writeln("\tDoes the file exist?"),
	?does_exist(),!,
	con ? writeln("\tYes, it does!").
test1:-
	con ? writeln("\tNo, it doesn't.").
--
test2:-
	con ? writeln("Test 2"),
	con ? writeln("\tIs this file a system one?"),
	?is_system(),!,
	con ? writeln("\tYes, it is!").
test2:-
	con ? writeln("\tNo, it isn't.").
--
test3:-
	con ? writeln("Test 3"),
	con ? writeln("\tIs this file a system one?"),
	?is_system(name),!,
	con ? writeln("\tYes, it is!").
test3:-
	con ? writeln("\tNo, it isn't.").
--
test4:-
	con ? writeln("Test 4"),
	con ? writeln("\tI will try to delete the file."),
	?delete(),!,
	con ? writeln("\tThe file was deleted successfully.").
test4:-
	con ? writeln("\tI cannot delete it.").
--
test5:-
	con ? writeln("Test 5"),
	con ? writeln("\tI will try to create the file."),
	?clear(),!,
	con ? writeln("\tDone!").
test5:-
	con ? writeln("\tI cannot create it.").
--
test6:-
	con ? writeln("Test 6"),
	con ? writeln("\tI will try to make the file a system one."),
	?set_system('on'),!,
	con ? writeln("\tDone!").
test6:-
	con ? writeln("\tI cannot make it.").
--
test7:-
	con ? writeln("Test 7"),
	con ? writeln("\tI will try to make the file a system one."),
	?set_system(name,'on'),!,
	con ? writeln("\tDone!").
test7:-
	con ? writeln("\tI cannot make it.").
--
test8:-
	con ? writeln("Test 8"),
	con ? writeln(
		"\tI will try to make the file a non-system one."),
	?set_system('off'),!,
	con ? writeln("\tDone!").
test8:-
	con ? writeln("\tI cannot make it.").
--
test9:-
	con ? writeln("Test 9"),
	con ? writeln(
		"\tI will try to make the file a non-system one."),
	?set_system(name,'off'),!,
	con ? writeln("\tDone!").
test9:-
	con ? writeln("\tI cannot make it.").
]
