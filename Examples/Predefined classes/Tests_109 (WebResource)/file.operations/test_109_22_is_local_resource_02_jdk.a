class 'ExternalResource' (specialized 'WebResource'):
--
internal:
--
con			= ('Console');
--
[
PREDICATES:
--
imperative:
--
test_1;
test_2;
test_3;
--
check_if_resource_is_local_file(STRING,Color)	- (i,o);
check_if_file_does_exist(STRING,Color)		- (i,o);
--
CLAUSES:
--
test_1:-
	Text== ?get_full_name(
			"../data.dir/report2.html"),
	check_if_resource_is_local_file(Text,Color),
	con ? set_color(Color),
	con ? writeln("FullName: ",Text),
	con ? set_color('Black').
--
test_2:-
	Text== ?get_full_name(
			"file://../../"
			"tests_109%20(WebResource)/"
			"file.operations/data.dir/report2.html"),
	check_if_resource_is_local_file(Text,Color),
	con ? set_color(Color),
	con ? writeln("FullName: ",Text),
	con ? set_color('Black').
--
test_3:-
	Text== ?get_full_name(
			"file.operations/data.dir/report2.html"),
	check_if_resource_is_local_file(Text,Color),
	con ? set_color(Color),
	con ? writeln("FullName: ",Text),
	con ? set_color('Black').
--
check_if_resource_is_local_file(Text,Color):-
	?is_local_resource(Text),!,
	check_if_file_does_exist(Text,Color).
check_if_resource_is_local_file(_,'Cyan').
--
check_if_file_does_exist(Text,'DkGreen'):-
	does_exist(Text),!.
check_if_file_does_exist(_,'Magenta').
]
