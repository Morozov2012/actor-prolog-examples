--
DOMAINS:
--
reference:
--
MyData		= {x:R_INTEGER,y:R_INTEGER,z:R_INTEGER}.
R_INTEGER	= INTEGER.
--
PREDICATES:
--
imperative:
--
test1;
test2;
test3;
test4;
test5;
--
-----------------------------------------------------------------------
class 'MyHashSet' (specialized 'HashSet'):
[
DOMAINS:
--
reference:
--
Target	= MyData.
]
-----------------------------------------------------------------------
class 'Main' (specialized 'Console'):
--
internal:
--
store	= ('MyHashSet');
--
[
goal:-!,
	test1,
	test2,
	test3,
	test4,
	test5.
--
test1:-
	writeln("Test 1: append(i)"),
	writeln("\tI will store data items."),
	store ? append({x:10,y:20}),
	store ? append({x:30,y:50,z:5}),
	store ? append({z:5,x:30,y:50}),
	store ? append({x:100,y:21}),
	store ? append({y:23,x:25,z:7}),
	store ? append({x:30,z:5,y:50}),
	store ? append({x:30,y:50,z:5}),
	store ? append({x:30,y:25}),
	writeln("\tDone.").
--
test2:-
	writeln("Test 2: find(o)"),
	writeln("\tI will retrieve data items:"),
	store ? find(Item),
	writeln("\t",Item),
	fail.
test2:-
	writeln("\tDone.").
--
test3:-
	writeln("Test 3: find(i)"),
	writeln("\tI will retrieve data items:"),
	store ? find({x:X|Rest}),
	writeln("\tx=",X," Rest=",Rest),
	fail.
test3:-
	writeln("\tDone.").
--
test4:-
	writeln("Test 4: find(i)"),
	writeln("\tI will retrieve given data item:"),
	store ? find({x:100,y:0}),!,
	writeln("\tYes, the item does exist!").
test4:-
	writeln("\tThe item doesn't exist!").
--
test5:-
	writeln("Test 5: find(i)"),
	writeln("\tI will retrieve given data item:"),
	store ? find({x:100,y:21}),!,
	writeln("\tYes, the item does exist!").
test5:-
	writeln("\tThe item doesn't exist!"),
	writeln("\tDone.").
]
-----------------------------------------------------------------------
