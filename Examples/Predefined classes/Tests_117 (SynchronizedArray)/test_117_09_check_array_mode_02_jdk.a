class 'IllegalControl' (specialized 'Control'):

constant:

	title			= "Illegal control";
	background_color	= 'Magenta';

	link;

internal:

	proxy1	= ('Link',
			content= link);
	proxy2	= ('Link',
			content= proxy1);

constant:

	con	= ('Console');

[
goal:-!,
	initiate_value(proxy2[10]),
	put(1002,proxy2[10]),!,
	check_port.
--
action("plain"):-!,
	proxy1 ? define_plain_port(10),
	check_port.
action("protecting"):-!,
	proxy1 ? define_protecting_port(10),
	check_port.
action("suspending"):-!,
	proxy1 ? define_suspending_port(10),
	check_port.
--
enter_text:-
	Text== ?cast("MessageString",
		con?input_string("Please enter the text","")),
	proxy1[10]== Text,!,
	check_port.
enter_text:-!.
--
check_port:-
	proxy2 ? is_plain_port(10),!,
	put(1001,"PLAIN").
check_port:-
	proxy2 ? is_protecting_port(10),!,
	put(1001,"PROTECTING").
check_port:-
	proxy2 ? is_suspending_port(10),!,
	put(1001,"SUSPENDING").
check_port:-!.
]

