class 'Control' (specialized 'Dialog'):

constant:

	link;

internal:

	proxy1	= ('Link',
			content= link);

constant:

	con	= ('Console');

[
goal:-!,
	initiate_value(proxy1[10]),
	put(1002,proxy1[10]),!,
	check_port.
--
initiate_value(""):-!.
initiate_value(_).
--
action("text"):-!,
	enter_text.
action("plain"):-!,
	proxy1 ? define_plain_port(10),
	check_port.
action("protecting"):-!,
	proxy1 ? define_protecting_port(10),
	check_port.
action("suspending"):-!,
	proxy1 ? define_suspending_port(10),
	check_port.
--
enter_text:-
	Text== ?cast("MessageString",
		con?input_string("Please enter the text","")),
	proxy1[10]== Text,!,
	check_port.
enter_text.
--
check_port:-
	proxy1 ? is_plain_port(10),!,
	put(1001,"PLAIN").
check_port:-
	proxy1 ? is_protecting_port(10),!,
	put(1001,"PROTECTING").
check_port:-
	proxy1 ? is_suspending_port(10),!,
	put(1001,"SUSPENDING").
check_port.
]

