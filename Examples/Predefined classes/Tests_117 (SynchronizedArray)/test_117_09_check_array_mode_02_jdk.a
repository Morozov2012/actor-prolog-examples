class 'Main' (specialized 'Alpha'):

internal:

	link	= ('Link');

constant:

	p1	= (('Control',
			link,
			x= 5,
			y= 5));
	p2	= (('Control',
			link,
			x= 45,
			y= 5));
	p3	= (('Control',
			link,
			x= 5,
			y= 14));
	p4	= (('IllegalControl',
			link,
			x= 45,
			y= 14));
[
goal:-!,
	p1 <- show,
	p2 <- show,
	p3 <- show,
	p4 <- show.
]

