--
PREDICATES:
--
imperative:
--
test1;
test2;
test3;
test4;
--
-----------------------------------------------------------------------
class 'Main' (specialized 'Console'):
[
goal:-!,
	test1,
	test2,
	test3,
	test4.
--
test1:-
	writeln("Test 1:"),
	Name== ?input_new_file_name(
		"Please enter a file name",
		"*.txt",
		[
		"*.a;*.def","Prolog",
		"*.txt","Text files",
		"*.bak","Temporary",
		"*.*","All files"],
		"c:\\"),!,
	writeln("\tThe selected file: ",Name).
test1:-
	writeln("\tThe input was canceled by the user.").
--
test2:-
	writeln("Test 2:"),
	FirstName== ?input_new_file_name(
		"Please enter a file name",
		"*.txt",
		[
		"*.a;*.def","Prolog",
		"*.txt","Text files",
		"*.bak","Temporary",
		"*.*","All files"],
		"c:\\",
		'on',
		SelectedFiles,
		SelectedType),!,
	writeln("\tSelected files: ",SelectedFiles),
	writeln("\tThe first file: ",FirstName),
	writeln("\tThe selected type: ",SelectedType).
test2:-
	writeln("\tThe input was canceled by the user.").
--
test3:-
	writeln("Test 3:"),
	?input_new_file_name(
		"Please enter a file name",
		"*.txt",
		[
		"*.a;*.def","Prolog",
		"*.txt","Text files",
		"*.bak","Temporary",
		"*.*","All files"],
		"c:\\"),!,
	writeln("\tThe user has entered something.").
test3:-
	writeln("\tThe input was canceled by the user.").
--
test4:-
	writeln("Test 4:"),
	?input_new_file_name(
		"Please enter a file name",
		"*.txt",
		[
		"*.a;*.def","Prolog",
		"*.txt","Text files",
		"*.bak","Temporary",
		"*.*","All files"],
		"c:\\",
		'on',
		SelectedFiles,
		SelectedType),!,
	writeln("\tSelected files: ",SelectedFiles),
	writeln("\tThe selected type: ",SelectedType).
test4:-
	writeln("\tThe input was canceled by the user.").
]
-----------------------------------------------------------------------
