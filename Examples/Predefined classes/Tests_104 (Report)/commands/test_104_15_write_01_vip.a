class 'Main' (specialized 'Report'):
--
constant:
--
	x	= 'centered';
	y	= 10;
	height	= 10;
	width	= 50;
--
internal:
--
	con	= ('Console');
--
[
goal:-!,
	con ? show,
	write("Hello"," ","World","!\n"),
	write(100),nl,
	write(100.0),nl,
	write('symbol'),nl,
	write(structure(1,3.0,"string",'symbol')),nl,
	write([1,3.0,"string",'symbol']),nl,
	write({a:1,b:3.0,c:"string",d:'symbol'}),nl,
	Text== ?get_string(),
	con ? writeln(Text).
]
