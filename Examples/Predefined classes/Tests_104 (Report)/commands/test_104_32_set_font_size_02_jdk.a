-----------------------------------------------------------------------
class 'Main':
--
w1	= ('MyWindow',
		new_font_size= 28,
		x= 0,
		y= 0);
w2	= ('MyWindow',
		font_size= 'default',
		new_font_size= 28,
		x= 0,
		y= 1);
w3	= ('MyWindow',
		font_size= 'default',
		new_font_size= 'default',
		x= 0,
		y= 2);
--
[
goal:-!.
--
alarm(_):-
	fail.
]
-----------------------------------------------------------------------
class 'MyWindow' (specialized 'Report'):
--
constant:
--
	new_font_size	: FontSize;
--
	width			= 1;
	height			= 1;
--
	font_size;
	font_style		= 'underlined';
	maximal_line_number	= 'window_height';
--
[
goal:-!,
	set_title(?format("Font size: %s",new_font_size)),
	-- change_font_size,
	write("++++++++"),
	write(" Initial font size: ",font_size),nl,
	write("+ Test +"),
	write(" New font size: ",new_font_size),nl,
	write("++++++++"),nl,
	change_font_size.
--
change_font_size:-
	set_font_size(new_font_size).
]
