--
PREDICATES:
--
imperative:
--
test0;
test1;
test2(TimeInterval)	- (i);
--
class 'Main' (specialized 'Timer'):
--
internal:
--
	con		= ('Console');
--
[
goal:-!,
	test0,
	test1,
	test2(100.0),
	test1,
	test2(3.14),
	test1.
--
test0:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 0."),
	con ? set_color('default'),
	?get_period(),!,
	con ? set_color('DkGreen'),
	con ? writeln("O.K."),
	con ? set_color('default').
test0:-
	con ? set_color('Red'),
	con ? writeln("Failed!"),
	con ? set_color('default').
--
test1:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 1."),
	con ? set_color('default'),
	Interval== ?get_period(),!,
	con ? set_color('Black'),
	con ? write("Period= "),
	con ? set_color('Violet'),
	con ? writeln(Interval),
	con ? set_color('DkGreen'),
	con ? writeln("O.K."),
	con ? set_color('default').
test1:-
	con ? set_color('Red'),
	con ? writeln("Failed!"),
	con ? set_color('default').
--
test2(Interval):-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 2."),
	con ? set_color('default'),
	set_period(Interval),
	con ? set_color('DkGreen'),
	con ? writeln("O.K."),
	con ? set_color('default').
]
