class 'Main' (specialized 'Timer'):
--
internal:
--
	con	= ('Console');
--
[
goal:-!,
	Time== ?time(),
	con ? writeln("Program has started at: ",Time),
	set_period(1.0,2.0),
	delay(3.0).
--
tick:-!,
	Time== ?time(),
	con ? writeln("Tick: current time is ",Time),
	activate.
]
