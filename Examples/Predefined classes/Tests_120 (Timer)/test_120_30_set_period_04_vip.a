class 'Main' (specialized 'Timer'):
--
internal:
--
	con	= ('Console');
--
[
goal:-!,
	Time== ?time(),
	con ? writeln("Program has started at: ",Time),
	set_period(3.0,0.0),
	activate.
--
tick:-!,
	Time== ?time(),
	con ? writeln("Current time: ",Time).
]
