class 'ExternalResource' (specialized 'WebReceptor'):
--
internal:
--
	con		= ('MyReport',title,x,y);
--
constant:
--
	location	: RefSTRING;
	x		: X;
	y		: Y;
--
variable:
--
	title		: RefSTRING;
--
[
IMPERATIVES:
--
test_resource;
test_local_resource;
test_local_resource(URL);
--
get_references(RefSTRING) = ReferenceList;
get_references(RefSTRING,FileMask) = ReferenceList;
--
CLAUSES:
--
goal:-!,
	title== location.
--
test_resource:-!,
	test1,
	test2,
	test3,
	test4,
	test5.
--
test_local_resource:-!,
	test1,
	test3.
test_local_resource(URL):-!,
	test2(URL),
	test4(URL),
	test5(URL).
--
test1:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 1"),
	con ? set_color('Green'),
	?get_references().
--
test2:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 2"),
	con ? set_color('Green'),
	?get_references(location).
test2(URL):-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 2"),
	con ? set_color('Green'),
	?get_references(URL).
--
test3:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 3"),
	con ? set_color('Green'),
	Content== ?get_references(),
	loop(1,Content).
--
test4:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 4"),
	con ? set_color('Green'),
	Content== ?get_references(location),
	loop(1,Content).
test4(URL):-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 4"),
	con ? set_color('Green'),
	Content== ?get_references(URL),
	loop(1,Content).
--
test5:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 5"),
	con ? set_color('Green'),
	Content== ?get_references(location,"*.a"),
	loop(1,Content).
test5(URL):-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 5"),
	con ? set_color('Green'),
	Content== ?get_references(URL,"*.a"),
	loop(1,Content).
--
loop(_,[]):-!,
	con ? set_color('RoyalBlue'),
	con ? writeln("=== End of list ==="),
	con ? set_color('default').
loop(N,[H|R]):-!,
	con ? set_color('RoyalBlue'),
	con ? write(N,") "),
	con ? set_color('Green'),
	con ? writeln(H),
	con ? set_color('default'),
	loop(N+1,R).
loop(_,R):-
	con ? set_color('Red'),
	con ? writeln(R),
	con ? set_color('default').
]
