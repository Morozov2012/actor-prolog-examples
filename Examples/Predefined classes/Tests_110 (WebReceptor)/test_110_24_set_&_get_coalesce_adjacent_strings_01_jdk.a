--
PREDICATES:
--
imperative:
--
test0;
test1;
test2(YesNo)	- (i);
--
class 'Main' (specialized 'WebReceptor'):
--
constant:
--
	location	= "";
--
internal:
--
	con		= ('Console');
--
[
goal:-!,
	test0,
	test1,
	test2('no'),
	test1,
	test2('yes'),
	test1.
--
test0:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 0."),
	con ? set_color('default'),
	?get_coalesce_adjacent_strings(),!,
	con ? set_color('DkGreen'),
	con ? writeln("O.K."),
	con ? set_color('default').
test0:-
	con ? set_color('Red'),
	con ? writeln("Failed!"),
	con ? set_color('default').
--
test1:-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 1."),
	con ? set_color('default'),
	Mode== ?get_coalesce_adjacent_strings(),!,
	con ? set_color('Black'),
	con ? write("Coalesce adjacent strings: "),
	con ? set_color('Violet'),
	con ? writeln(Mode),
	con ? set_color('DkGreen'),
	con ? writeln("O.K."),
	con ? set_color('default').
test1:-
	con ? set_color('Red'),
	con ? writeln("Failed!"),
	con ? set_color('default').
--
test2(Mode):-
	con ? set_color('RoyalBlue'),
	con ? writeln("Test 2."),
	con ? set_color('default'),
	set_coalesce_adjacent_strings(Mode),
	con ? set_color('DkGreen'),
	con ? writeln("O.K."),
	con ? set_color('default').
]
