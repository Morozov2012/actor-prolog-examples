class 'Test1' (specialized 'Testbed'):
--
internal:
--
	con;
--
[
goal:-
	con ? writeln("TEST 1"),
	fail.
--
p(N):-!,
	con ? writeln("Test1 (1): p/1"),
	N== 100.
--
q(N):-!,
	con ? writeln("Test1 (2): q/1"),
	N== 300.
--
r(N):-
	con ? writeln("Test1 (3): r/1"),
	N== 500,!.
r(_):-
	con ? writeln("Test1 (4): r/1").
--
r(K,N):-
	con ? writeln("Test1 (5): r/2"),
	con ? writeln("Test1 (6): K=",K),
	N== 700,!.
r(K,_):-
	con ? writeln("Test1 (7): r/2"),
	con ? writeln("Test1 (8): K=",K).
]
