class 'Test2' (specialized 'Testbed'):
--
internal:
--
	first_test;
--
	con;
--
[
goal:-
	con ? writeln("TEST 2"),
	fail.
--
M(1000):-!,
	con ? writeln("Test2 (1): M=",M).
--
M(K,3000):-!,
	con ? writeln("Test2 (2): M=",M,", K=",K).
--
M(N):-
	con ? writeln("Test2 (3): M=",M),
	first_test ? M(N),
	con ? writeln("Test2 (4): M=",M,", N=",N).
--
M(N,K):-
	con ? writeln("Test2 (5): M=",M,", N=",N),
	first_test ? M(N,K),
	con ? writeln("Test2 (6): M=",M,", N=",N,", K=",K).
]
