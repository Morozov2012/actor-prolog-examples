class 'MainDialog' (specialized 'Dialog'):
--
internal:
--
	kinect_buffer;
	graphic_window;
--
constant:
--
	is_top_level_window	= 'yes';
--
[
action("play"):-!,
	kinect_buffer ? start.
action("pause"):-!,
	kinect_buffer ? pause.
]
