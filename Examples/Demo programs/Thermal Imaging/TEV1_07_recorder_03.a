on_off('yes') = 'on' :-!.
on_off(_) = 'off'.
--
create_new_file_name() = FileName :-
	timer ? date(Year,Month,Day),
	timer ? time(Hour,Minute,Second),
	FileName== text_operations?format(
		"%04d-%02d-%02d-%02d-%02d-%02d",
		Year,Month,Day,
		Hour,Minute,Second).
