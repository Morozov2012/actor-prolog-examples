--
DOMAINS:
--
mixed:
--
Homes		= Home*.
--
reference:
--
Home		= {	number: N,
			nationality: Nationality,
			colour: Colour,
			animal: Animal,
			drink: Drink,
			smoke: Cigarette
			}.
--
lazy:
--
N		= INTEGER.
--
reference:
--
Nationality	= 'Dane'; 'Englishman'; 'German'; 'Norwegian'; 'Swede'.
Colour		= 'Red'; 'Green'; 'White'; 'Yellow'; 'Blue'.
Animal		= 'dog'; 'bird'; 'cat'; 'horse'; 'goldfish'.
Drink		= 'tea'; 'coffee'; 'milk'; 'beer'; 'water'.
Cigarette	=	'Pall Mall'; 'Dunhill'; 'Marlboro';
			'Winfield'; 'Rothmans'.
--
------------------------------------------------------------------------
interface 'Puzzle' (specialized 'Console'):
[
PREDICATES:
--
imperative:
--
prepare_homes(Homes)		- (o);
--
nondeterm:
--
conditions1(Homes)		- (i);
conditions2(Homes)		- (i);
--
apply(Homes,Home)		- (i,i);
--
nondeterm:
--
less(N,N)			- (i,i);
--
nearby(N,N)			- (i,i);
near(N,N)			- (i,i);
--
imperative:
--
'+'(N,N) = N			- (i,i);
'-'(N,N) = N			- (i,i);
]
------------------------------------------------------------------------
