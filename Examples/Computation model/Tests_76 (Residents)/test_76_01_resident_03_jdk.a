class 'Main' (specialized 'Alpha'):
--
p	= (('Observer',
		data= (('Target'))??f(1,2,3,0) ));
--
[
]
-----------------------------------------------------------------------
class 'Target' (specialized 'Alpha'):
[
f(A,B,_,_)= A + B.
f(_,_,C,D)= D + C.
f(A,B,C,D)= A + B + C + D.
f(_,_,C,D)= C + D.
f(A,B,_,_)= B + A.
]
-----------------------------------------------------------------------
class 'Observer' (specialized 'Report'):
--
variable:
--
	data;
--
[
goal:-!,
	set_color('RoyalBlue'),
	writeln("Received data:"),
	set_color('Violet'),
	writeln(data),
	set_color('default').
]
