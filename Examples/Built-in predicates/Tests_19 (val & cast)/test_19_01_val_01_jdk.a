DOMAINS:

S1	= INTEGER; STRING.
S2	= STRING; REAL.

IMPERATIVES:

p(S1)		- (i);

CLAUSES:

goal:-
	p("Hello world!!!").
--
p(T):-
	writeln(?val("S2",T)),!,
	set_color('Green'),
	writeln("Test O.K.").
p(_):-
	set_color('Red'),
	writeln("Test failed!").
