DOMAINS:
--
mixed:
--
A1	= structure(INTEGER,M1,D1).
A2	= {year:INTEGER,month:M1,day_of_week:D1}.
A3	= {_}.
--
B1	= structure(YearNumber,M2,D2).
B2	= {day_of_week:D2,month:M2,year:YearNumber}.
B3	= {day_of_week:D2,month:M2,year:YearNumber}.
--
DOMAINS:
--
ground:
--
YearNumber	= INTEGER.
M2		= INTEGER.
--
reference:
--
M1		= INTEGER.
--
D1		= INTEGER.
D2		= [1 .. 7].

IMPERATIVES:

test1(A1)		- (i);
test2(A2)		- (i);
test3(A3)		- (i);

class 'Main' (specialized 'Alpha'):
w1	= (('Test1'));
w2	= (('Test2'));
w3	= (('Test3'));
[
]

class 'Test1' (specialized 'Report'):
y	= 0;
height	= 8;
[
goal:-!,
	test1(structure(2012,9,30)).
--
test1(T):-
	set_color('RoyalBlue'),
	writeln("Test 1"),
	writeln("\t",?cast("B1",T)),
	set_color('Magenta'),
	writeln("\tSuccess").
--
alarm(ErrorCode):-!,
	set_color('DkGreen'),
	writeln("\tFailure, ErrorCode: ",ErrorCode).
]

class 'Test2' (specialized 'Report'):
y	= 8;
height	= 8;
[
goal:-!,
	test2({month:9,day_of_week:30,year:2012}).
--
test2(T):-
	set_color('RoyalBlue'),
	writeln("Test 2"),
	writeln("\t",?cast("B2",T)),
	set_color('Magenta'),
	writeln("\tSuccess").
