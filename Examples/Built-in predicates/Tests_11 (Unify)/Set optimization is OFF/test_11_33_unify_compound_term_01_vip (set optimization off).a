DOMAINS:

ground:

A1	= s1(B1,C1,D1,E1,F1); s2(B1,C1); 'nil1'; 'nil2'.
B1	= G1*.
C1	= INTEGER.
D1	= REAL.
E1	= STRING.
F1	= SYMBOL.
G1	= {name1:C1,name2:D1,name3:E1,name4:F1,name5:A1}.

DOMAINS:

reference:

A2	= s1(B2,C2,D2,E2,F2); s2(B2,C2); 'nil1'; 'nil2'.
B2	= G2*.
C2	= INTEGER.
D2	= REAL.
E2	= STRING.
F2	= SYMBOL.
G2	= {name1:C2,name2:D2,name3:E2,name4:F2,name5:A2}.

DOMAINS:

mixed:

A3	= s1(B3,C2,D2,E2,F2); s2(B3,C2); 'nil1'; 'nil2'.
B3	= G3*.
G3	= {name1:C2,name2:D2,name3:E2,name4:F2,name5:A2}.

PREDICATES:

imperative:

test1;
test2;
test3;

p1(G1)				- (i);
p2(G2)				- (i);
p3(G3)				- (i);
q1(A1,C1,D1,E1,F1,A1,C1)	- (i,i,o,o,o,o,o);
q2(A2,C2,D2,E2,F2,A2,C2)	- (i,i,o,o,o,o,o);
q3(A3,C2,D2,E2,F2,A2,C2)	- (i,i,o,o,o,o,o);
r1(C1,D1,E1,F1,A1,C1)		- (i,o,o,o,o,o);
r2(C2,D2,E2,F2,A2,C2)		- (i,o,o,o,o,o);
r3(C2,D2,E2,F2,A2,C2)		- (i,o,o,o,o,o);

nondeterm:

choice;

class 'Main' (specialized 'DemoConsole'):
[
goal:-
	test1,
	test2,
	test3.
--
test1:-
	set_color('RoyalBlue'),
	writeln("Test 1"),
	set_color('default'),
	X== {	name1:500,
		name2:3.14,
		name3:"Text1",
		name4:'Name1'},
	writeln("X= ",X),
	p1(X).
--
test2:-
	set_color('RoyalBlue'),
	writeln("Test 2"),
	set_color('default'),
	X== {	name1:500,
		name2:3.14,
		name3:"Text1",
		name4:'Name1'},
	writeln("X= ",X),
	p2(X).
--
test3:-
	set_color('RoyalBlue'),
	writeln("Test 3"),
	set_color('default'),
	X== {	name1:500,
		name2:3.14,
		name3:"Text1",
		name4:'Name1'},
	writeln("X= ",X),
	p3(X).
--
p1(X):-
	Y== s2([{name5:s2([],300)|X}],700),!,
	writeln("Y= ",Y),
	q1(Y,500,D,E,F,R,J),
	set_color('Green'),
	writeln("D= ",D),
	writeln("E= ",E),
	writeln("F= ",F),
	writeln("R= ",R),
	writeln("J= ",J),
	writeln("O.K.").
p1(_):-
	set_color('Red'),
	writeln("p/1 failed.").
--
p2(X):-
	Y== s2([{name5:s2([],300)|X}],700),!,
	writeln("Y= ",Y),
	q2(Y,500,D,E,F,R,J),
	set_color('Green'),
	writeln("D= ",D),
	writeln("E= ",E),
	writeln("F= ",F),
	writeln("R= ",R),
	writeln("J= ",J),
	writeln("O.K.").
p2(_):-
	set_color('Red'),
	writeln("p/1 failed.").
--
p3(X):-
	Y== s2([{name5:s2([],300)|X}],700),!,
	writeln("Y= ",Y),
	q3(Y,500,D,E,F,R,J),
	set_color('Green'),
	writeln("D= ",D),
	writeln("E= ",E),
	writeln("F= ",F),
	writeln("R= ",R),
	writeln("J= ",J),
	writeln("O.K.").
p3(_):-
	set_color('Red'),
	writeln("p/1 failed.").
--
q1(_,Y1,Y2,Y3,Y4,Y5,J):-
	choice,
		r1(Y1,Y2,Y3,Y4,Y5,J),
		fail.
q1(X,Y1,Y2,Y3,Y4,Y5,J):-
	X== s2([{	name1:Y1,
			name2:Y2,
			name3:Y3,
			name4:Y4,
			name5:Y5|_}
		],J),!,
	writeln("Y1= ",Y1),
	writeln("Y2= ",Y2),
	writeln("Y3= ",Y3),
	writeln("Y4= ",Y4),
	writeln("Y5= ",Y5),
	writeln("J= ",J).
q1(_,_,2.0,"3",'4','nil1',5):-
	set_color('Red'),
	writeln("q/1 failed.").
--
q2(_,Y1,Y2,Y3,Y4,Y5,J):-
	choice,
		r2(Y1,Y2,Y3,Y4,Y5,J),
		fail.
q2(X,Y1,Y2,Y3,Y4,Y5,J):-
	X== s2([{	name1:Y1,
			name2:Y2,
			name3:Y3,
			name4:Y4,
			name5:Y5|_}
		],J),!,
	writeln("Y1= ",Y1),
	writeln("Y2= ",Y2),
	writeln("Y3= ",Y3),
	writeln("Y4= ",Y4),
	writeln("Y5= ",Y5),
	writeln("J= ",J).
q2(_,_,2.0,"3",'4','nil1',5):-
	set_color('Red'),
	writeln("q/1 failed.").
--
q3(_,Y1,Y2,Y3,Y4,Y5,J):-
	choice,
		r3(Y1,Y2,Y3,Y4,Y5,J),
		fail.
q3(X,Y1,Y2,Y3,Y4,Y5,J):-
	X== s2([{	name1:Y1,
			name2:Y2,
			name3:Y3,
			name4:Y4,
			name5:Y5|_}
		],J),!,
	writeln("Y1= ",Y1),
	writeln("Y2= ",Y2),
	writeln("Y3= ",Y3),
	writeln("Y4= ",Y4),
	writeln("Y5= ",Y5),
	writeln("J= ",J).
q3(_,_,2.0,"3",'4','nil1',5):-
	set_color('Red'),
	writeln("q/1 failed.").
--
r1(_,102.0,"103",'104','nil2',105).
--
r2(_,102.0,"103",'104','nil2',105).
--
r3(_,102.0,"103",'104','nil2',105).
--
choice.
choice.
choice.
]
