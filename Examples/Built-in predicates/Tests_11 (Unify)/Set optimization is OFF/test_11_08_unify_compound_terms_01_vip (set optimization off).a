DOMAINS:

ground:

A1	= s1(B1,C1,D1,E1,F1); s2(B1,C1).
B1	= G1*.
C1	= INTEGER.
D1	= REAL.
E1	= STRING.
F1	= SYMBOL.
G1	= {name1:C1,name2:D1,name3:E1,name4:F1,name5:A1}.

DOMAINS:

reference:

A2	= s1(B2,C2,D2,E2,F2); s2(B2,C2).
B2	= G2*.
C2	= INTEGER.
D2	= REAL.
E2	= STRING.
F2	= SYMBOL.
G2	= {name1:C2,name2:D2,name3:E2,name4:F2,name5:A2}.

DOMAINS:

mixed:

A3	= s1(B3,C2,D2,E2,F2); s2(B3,C2).
B3	= G3*.
G3	= {name1:C2,name2:D2,name3:E2,name4:F2,name5:A2}.

PREDICATES:

imperative:

test1;
test2;
test3;

determ:

p1(G1)		- (i);
p2(G2)		- (i);
p3(G3)		- (i);

class 'Main' (specialized 'DemoConsole'):
--
rest1	: G1	= {name2:3.14};
rest2	: G2	= {name2:3.14};
rest3	: G3	= {name2:3.14};
--
[
goal:-
	test1,
	test2,
	test3.
--
test1:-
	set_color('RoyalBlue'),
	writeln("Test 1"),
	set_color('default'),
	X== {	name2:3.14,
		name4:'Name1'},
	writeln("X= ",X),
	p1(X),!,
	set_color('Green'),
	writeln("O.K.").
test1:-
	set_color('Red'),
	writeln("Failure").
--
test2:-
	set_color('RoyalBlue'),
	writeln("Test 2"),
	set_color('default'),
	X== {	name2:3.14,
		name4:'Name1'},
	writeln("X= ",X),
	p2(X),!,
	set_color('Green'),
	writeln("O.K.").
test2:-
	set_color('Red'),
	writeln("Failure").
--
test3:-
	set_color('RoyalBlue'),
	writeln("Test 3"),
	set_color('default'),
	X== {	name2:3.14,
		name4:'Name1'},
	writeln("X= ",X),
	p3(X),!,
	set_color('Green'),
	writeln("O.K.").
test3:-
	set_color('Red'),
	writeln("Failure").
--
p1(X):-
	Y1== 500,
	--
	{	name1:500,
		name5:s2([],300)|X}
	==
	{	name1:Y1,
		name4:_,
		name5:Y5|rest1},
	--
	writeln("Y1= ",Y1),
	writeln("Y5= ",Y5),
	writeln("Rest= ",rest1).
--
p2(X):-
	Y1== 500,
	--
	{	name1:500,
		name5:s2([],300)|X}
	==
	{	name1:Y1,
		name4:_,
		name5:Y5|rest2},
	--
	writeln("Y1= ",Y1),
	writeln("Y5= ",Y5),
	writeln("Rest= ",rest2).
--
p3(X):-
	Y1== 500,
	--
	{	name1:500,
		name5:s2([],300)|X}
	==
	{	name1:Y1,
		name4:_,
		name5:Y5|rest3},
	--
	writeln("Y1= ",Y1),
	writeln("Y5= ",Y5),
	writeln("Rest= ",rest3).
]
