--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Рекурсия с уменьшением входного       --
-- параметра ("разборка списка").        --
--                                       --
-- Использованы "кирпичики":             --
-- 1) рекурсия;                          --
-- 2) входной аргумент.                  --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(List)		- (i);

CLAUSES:

goal:-
	p([1,2,3,4,5]).

p([]).
p([Голова|Хвост]):-
	writeln(Голова),
	p(Хвост).
