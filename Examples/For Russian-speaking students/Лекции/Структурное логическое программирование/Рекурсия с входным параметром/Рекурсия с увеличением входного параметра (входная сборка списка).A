-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Рекурсия с увеличением входного       --
-- параметра ("входная сборка списка").  --
--                                       --
-- Использованы "кирпичики":             --
-- 1) рекурсия;                          --
-- 2) входной аргумент.                  --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(List)		- (i);

CLAUSES:

goal:-
	p([]).

p(Хвост):-
	Голова== ?input_integer(
		"Введите целое число",0),
	p([Голова|Хвост]).
p(Результат):-
	writeln(Результат).
