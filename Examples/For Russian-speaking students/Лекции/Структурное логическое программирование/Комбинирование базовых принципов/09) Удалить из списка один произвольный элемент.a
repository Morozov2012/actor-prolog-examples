-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Удалить из списка один произвольный   --
-- элемент.                              --
--                                       --
-- Использованы "кирпичики":             --
-- 1) разборка списка;                   --
-- 2) выходной аргумент;                 --
-- 3) выходная сборка списка;            --
-- 4) откат.                             --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(List,INTEGER,List)	- (i,o,o);

CLAUSES:

goal:-
	L1== [1,2,3,4,5,6,7],
	writeln("L1=",L1),nl,
	p(L1,X,L2),
	writeln("X=",X,", L2=",L2),
	fail.

p([Голова|Хвост],Голова,Хвост).
p([Голова|Хвост1],H,[Голова|Хвост2]):-
	p(Хвост1,H,Хвост2).
