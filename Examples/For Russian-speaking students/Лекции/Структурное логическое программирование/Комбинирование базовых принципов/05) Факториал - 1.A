-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Факториал.                            --
--                                       --
-- Использованы "кирпичики":             --
-- 1) уменьшение индекса;                --
-- 2) вычисление выходного аргумента.    --
--                                       --
-------------------------------------------

DOMAINS:

N	= INTEGER.

PREDICATES:

nondeterm:

факториал(N,N)	- (i,o);

CLAUSES:

goal:-
	X== 5,
	факториал(X,R),
	writeln("Факториал ",X,
		" равен ",R,".").

факториал(0,1).
факториал(N,Результат*N):-
	факториал(N-1,Результат).
