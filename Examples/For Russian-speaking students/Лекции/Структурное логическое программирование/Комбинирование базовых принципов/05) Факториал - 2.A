DOMAINS:

N	= INTEGER.

PREDICATES:

nondeterm:

факториал(N) = N	- (i);

CLAUSES:

goal:-
	X== 5,
	R== ?факториал(X),
	writeln("‘акториал ",X,
		" равен ",R,".").

факториал(0)= 1.
факториал(N)= N * ?факториал(N-1).
