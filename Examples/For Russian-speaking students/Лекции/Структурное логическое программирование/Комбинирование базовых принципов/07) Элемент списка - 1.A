-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Элемент списка.                       --
-- Как проверить, является ли число      --
-- элементом списка?                     --
--                                       --
-- Использованы "кирпичики":             --
-- 1) входной аргумент;                  --
-- 2) разборка списка.                   --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

элемент(INTEGER,List)		- (i,i);

CLAUSES:

goal:-
	X== 3,
	элемент(X,[1,2,3,4,5]),
	writeln("Да, X есть в списке.").
goal:-
	writeln("Нет, X нет в списке.").

элемент(H,[H|_]).
элемент(H,[_|Хвост]):-
	элемент(H,Хвост).
