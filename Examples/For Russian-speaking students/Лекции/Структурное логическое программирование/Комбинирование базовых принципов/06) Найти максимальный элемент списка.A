-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Найти максимальный элемент списка.    --
--                                       --
-- Использованы "кирпичики":             --
-- 1) разборка списка;                   --
-- 2) входной аргумент;                  --
-- 3) выходной аргумент.                 --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

maximum(List,INTEGER)	- (i,o);
p(List,INTEGER,INTEGER)	- (i,i,o);

CLAUSES:

goal:-
	L== [1,5,3,4,2],
	maximum(L,N),
	writeln(N).

maximum([Голова|Хвост],Результат):-
	p(Хвост,Голова,Результат).
maximum([],_):-
	warning("Список пустой!"),
	break.

p([X|Хвост],M,Результат):-
	X > M,
	p(Хвост,X,Результат).
p([X|Хвост],M,Результат):-
	X <= M,
	p(Хвост,M,Результат).
p([],Y,Y).
