-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Удалить из списка повторные элементы. --
--                                       --
-- Использованы "кирпичики":             --
-- 1) разборка списка;                   --
-- 2) выходная сборка списка;            --
-- 3) элемент списка.                    --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(List,List)		- (i,o);
элемент(INTEGER,List)	- (i,i);

CLAUSES:

goal:-
	L1== [1,5,1,3,2,4,5,2],
	writeln("L1=",L1),
	p(L1,L2),
	writeln("L2=",L2).

p([Голова|Хвост1],Хвост2):-
	элемент(Голова,Хвост1),
	p(Хвост1,Хвост2).
p([Голова|Хвост1],[Голова|Хвост2]):-
	p(Хвост1,Хвост2).
p([],[]).

элемент(H,[H|_]).
элемент(H,[_|Хвост]):-
	элемент(H,Хвост).
