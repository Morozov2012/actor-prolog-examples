-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Подсчитать сумму элементов списка.    --
--                                       --
-- Использованы "кирпичики":             --
-- 1) разборка списка;                   --
-- 2) увеличение индекса;                --
-- 3) выходной аргумент.                 --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(List,INTEGER,INTEGER)	- (i,i,o);

CLAUSES:

goal:-
	p([1,2,3,4,5],0,N),
	writeln("Сумма: ",N).

p([X|Хвост],S,Результат):-
	p(Хвост,S+X,Результат).
p([],Y,Y).
