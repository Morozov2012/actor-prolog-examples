-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Удалить из списка все вхождения       --
-- элемента.                             --
--                                       --
-- Использованы "кирпичики":             --
-- 1) входной аргумент;                  --
-- 2) разборка списка;                   --
-- 3) выходная сборка списка.            --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(INTEGER,List,List)	- (i,i,o);

CLAUSES:

goal:-
	X== 2,
	L1== [1,5,1,3,2,4,5,2],
	writeln("L1=",L1),
	p(X,L1,L2),
	writeln("L2=",L2).

p(H,[H|Хвост1],Хвост2):-
	p(H,Хвост1,Хвост2).
p(H,[Голова|Хвост1],[Голова|Хвост2]):-
	H <> Голова,
	p(H,Хвост1,Хвост2).
p(_,[],[]).
