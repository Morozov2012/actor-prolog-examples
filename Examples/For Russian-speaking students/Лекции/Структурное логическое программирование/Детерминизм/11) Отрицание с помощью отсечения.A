-------------------------------------------
--                                       --
-- Как реализовать отрицание с помощью   --
-- отсечения и отката?                   --
--                                       --
-------------------------------------------

PREDICATES:

determ:

not_p(INTEGER)	- (i);
p(INTEGER)	- (i);

CLAUSES:

goal:-
	X== 5,
	not_p(X),
	writeln("Высказывание not_p(",X,") истинно.").
goal:-
	writeln("Высказывание ложно.").

not_p(X):-
	p(X),!,
	fail.
not_p(_).

p(1).
p(2).
p(3).
