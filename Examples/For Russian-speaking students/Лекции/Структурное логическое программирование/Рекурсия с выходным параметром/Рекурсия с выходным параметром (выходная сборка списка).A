-------------------------------------------
--                                       --
-- Элементы структурного логического     --
-- программирования.                     --
--                                       --
-- Рекурсия с выходным параметром        --
-- ("выходная сборка списка").           --
--                                       --
-- Использованы "кирпичики":             --
-- 1) рекурсия;                          --
-- 2) выходной аргумент.                 --
--                                       --
-------------------------------------------

DOMAINS:

List	= INTEGER*.

PREDICATES:

nondeterm:

p(List)		- (o);

CLAUSES:

goal:-
	p(X),
	writeln(X).

p([Голова|Хвост]):-
	Голова== ?input_integer(
		"Введите целое число",0),
	p(Хвост).
p([]).
